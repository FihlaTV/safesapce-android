<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:fillViewport="true"
    xmlns:app="http://schemas.android.com/apk/res-auto">
<FrameLayout
    android:orientation="vertical"
    android:id="@+id/main_content"
    android:layout_height="wrap_content"
    android:layout_width="match_parent"
    android:padding="0dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="0dp"
        android:gravity="center_horizontal"
        android:id="@+id/contactmain">
        <ImageView
            android:id="@+id/imageAvatar"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:visibility="gone"
            android:src='@drawable/avatar_unknown'
            android:scaleType="centerCrop"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:orientation="horizontal"
        android:id="@+id/imageSpacer"
        >
        </LinearLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            >

                <info.guardianproject.keanu.core.type.CustomTypefaceTextView android:id="@+id/tvNickname"
                    android:selectAllOnFocus="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:hint="@string/account_setup_example_email_address"
                    android:autoLink="none"
                    android:cursorVisible="true"
                    android:inputType="textEmailAddress"
                    android:text="user person"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:textSize="30dp"
 />

            <ImageView android:id="@+id/btnStartChat"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_action_message"
                android:padding="6dp"
                android:layout_marginTop="20dp"
                android:layout_alignParentRight="true"
                android:gravity="right"
                />

                <info.guardianproject.keanu.core.type.CustomTypefaceTextView android:id="@+id/tvUsername"
                    android:selectAllOnFocus="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:hint="@string/account_setup_example_email_address"
                    android:autoLink="none"
                    android:cursorVisible="true"
                    android:inputType="textEmailAddress"
                    android:text="user@domain.com"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="?contactTextSecondary"
                    android:layout_below="@+id/tvNickname"

                    />





        </RelativeLayout>

<LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:id="@+id/listEncryptionKey"
    android:visibility="gone"
    >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp">
            <info.guardianproject.keanu.core.type.CustomTypefaceTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:autoLink="none"
                android:text="@string/security_code"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textColor="?contactTextSecondary"
                android:layout_gravity="start"
                />
            <info.guardianproject.keanu.core.type.CustomTypefaceTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:autoLink="none"
                android:text="@string/action_verified"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textColor="?contactTextSecondary"
                android:layout_gravity="start"
                android:layout_alignParentRight="true"

                />


        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            >

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:id="@+id/verifiedIcon"
                android:src="@drawable/ic_verified_user_white_48dp"
                android:tint="@color/holo_grey_light"
                android:layout_alignParentLeft="true"
                />
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_toRightOf="@+id/verifiedIcon"
                >
            <info.guardianproject.keanu.core.type.CustomTypefaceTextView
                android:id="@+id/tvDeviceName"
                android:selectAllOnFocus="true"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="6dp"
                android:autoLink="none"
                android:text="device name"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="?contactTextSecondary"

                android:layout_centerVertical="true"
                />
            <info.guardianproject.keanu.core.type.CustomTypefaceTextView
                android:id="@+id/tvFingerprint"
                android:selectAllOnFocus="true"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="6dp"
                android:autoLink="none"
                android:text="fingerprint"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textStyle="bold"
                android:textColor="?contactTextSecondary"
                android:layout_centerVertical="true"
                />
            </LinearLayout>
            <android.support.v7.widget.SwitchCompat
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/switchVerified"
                android:layout_alignParentRight="true"
                android:padding="6dp"
                android:layout_margin="1dp"
                />

        </RelativeLayout>
</LinearLayout>

        <info.guardianproject.keanu.core.type.CustomTypefaceButton android:id="@+id/btnAddAsFriend"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@null"
            tools:text="Add X as Friend"
            android:padding="10dp"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="?colorPrimary"
            android:gravity="start|left"
            android:onClick="addFriendClicked"
            android:visibility="visible"
            />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/fragment_container"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:orientation="vertical"></LinearLayout>
    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@android:color/transparent"
        app:layout_collapseMode="pin" />

</FrameLayout>
</ScrollView>