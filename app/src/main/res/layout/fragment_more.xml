        <LinearLayout
            android:id="@+id/btnOpenStickers"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="6dp">

            <info.guardianproject.keanuapp.ui.widgets.CircleColorImageView
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_gravity="center"
                android:layout_margin="6dp"
                android:padding="6dp"
                android:src="@drawable/ic_insert_emoticon_white_36dp"
                app:circleColor="@android:color/holo_orange_light" />

            <info.guardianproject.keanu.core.type.CustomTypefaceTextView
                android:layout_width="match_parent"
                android:layout_height="64dp"
                android:layout_gravity="center"
                android:layout_marginStart="6dp"
                android:gravity="center_vertical"
                android:text="@string/action_stickers"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textColor="?contactTextSecondary" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/btnOpenThemes"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
