            android:padding="6dp">

            <info.guardianproject.keanuapp.ui.widgets.CircleColorImageView
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_gravity="center"
                android:layout_margin="6dp"
                android:padding="6dp"
                android:src="@drawable/tshirt128px"
                app:circleColor="@android:color/holo_purple" />

            <info.guardianproject.keanu.core.type.CustomTypefaceTextView
                android:layout_width="match_parent"
                android:layout_height="64dp"
                android:layout_gravity="center"
                android:layout_marginStart="6dp"
                android:gravity="center_vertical"
                android:text="@string/action_theme"
